@model Incident
@{
    string title = ViewBag.Action;

}

<div class="flex flex-col justify-center items-center mt-36">
    <h1 class="mb-20 text-4xl">@(title == "Add" ? "Add a new Incident" : "Edit the Incident")</h1>
    <div class="bg-neutral w-3/12  pt-10 pb-10 rounded-lg ">

        <div class=" ml-5 ">
            <div>
                <label class="label">
                    <span class="label-text">Customer</span>
                </label>
                <select class="select w-9/12">
                    <option disabled selected>Choose a Customer</option>
                    <option>Homer</option>
                    <option>Marge</option>
                    <option>Bart</option>
                    <option>Lisa</option>
                    <option>Maggie</option>
                </select>
            </div>

            <div class="mt-5">
                <label class="label">
                    <span class="label-text">Product</span>
                </label>
                <select class="select w-9/12">
                    <option disabled selected>Choose a Product</option>
                    <option>Homer</option>
                    <option>Marge</option>
                    <option>Bart</option>
                    <option>Lisa</option>
                    <option>Maggie</option>
                </select>
            </div>

            <div class="mt-5">
                <label class="label">
                    <span class="label-text">Title</span>
                </label>
                <input type="text" placeholder="Type here" class="input w-9/12 ">
            </div>

            <div class="mt-5">
                <label class="label">
                    <span class="label-text">Description</span>
                </label>
                <input type="text" placeholder="Type here" class="input w-9/12 ">
            </div>

            <div class="mt-5">
                <label class="label">
                    <span class="label-text">Technician</span>
                </label>
                <select class="select w-9/12">
                    <option disabled selected>Choose a Product</option>
                    <option>Homer</option>
                    <option>Marge</option>
                    <option>Bart</option>
                    <option>Lisa</option>
                    <option>Maggie</option>
                </select>
            </div>

            <label class="label mt-5">
                <span class="label-text">Date Opened</span>
            </label>
            <div class="relative ">
                <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none ">
                    <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
                </div>
                <input datepicker type="text" class=" border border-gray-300 text-gray-900  sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-9/12 pl-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Select date">
            </div>

    </div>

</div>

