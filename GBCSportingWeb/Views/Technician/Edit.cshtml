@model Technician
@{
    string action = ViewBag.Action;
}

<div class="flex flex-col justify-center items-center mt-36">
    <h1 class="mb-20 text-4xl">@(action == "Add" ? "Add a new Technician" : "Edit a Technician")</h1>
    <div class="bg-neutral w-3/12  pt-10 pb-10 rounded-lg ">

        <div class=" ml-5 ">

            <form asp-action="Edit" method="post">
                <div asp-validation-summary="All" ></div>
                <div class="mt-5">
                    <label asp-for="Name" class="label">
                        <span class="label-text">Name</span>
                    </label>
                    <input asp-for="Name" type="text" placeholder="Type here" class="input w-9/12 ">
                </div>

                <div class="mt-5">
                    <label asp-for="Email" class="label">
                        <span class="label-text">Email</span>
                    </label>
                    <input asp-for="Email" type="email" placeholder="Type here" class="input w-9/12 ">
                </div>

                <div>
                    <label asp-for="Phone" class="label mt-5">
                        <span class="label-text">Phone</span>
                    </label>
                   <input asp-for="Phone" type="text" placeholder="Type here" class="input w-9/12 ">
                </div>

                <input type="hidden" asp-for="TechnicianId"/>

                <button  class="btn btn-primary mt-5">@(action == "Add" ? "Add" : "Update")</button>
                <a asp-controller="Technician" asp-action="Index" class="btn btn-outline btn-error" >Cancel</a>
            </form>
         </div>
    </div>
</div>

